/* pages/fault/fault.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 0;
} 
  
.icon-box {
  margin: 20rpx 100rpx;
  border-radius: 30rpx;
}
.icon-box>image{
  width:500rpx;
  height:80rpx;
}


.fault-icon-text {
  font-size: 26rpx;
  font-weight: bold;
  vertical-align: middle;
}

/*上传图片  */

.upload {
  margin: 20rpx 20rpx;
}
.imgUpload{
  margin:0 10rpx;
  width:160rpx; 
  height:160rpx;
}
/*checkbox  */

.checkBox {
  width: 100%;
  border: 1rpx solid #999;
  margin: 24rpx 0;
}

.upload_icon {
  width: 140rpx;
  height: 140rpx;
  vertical-align: middle;
}

.check_box {
  float: left;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  margin-left: 30rpx;
}

.check_box2 {
  margin-right: 0;
}

.checkbox {
  margin: 22rpx 5rpx;
  font-size: 30rpx;
  font-weight: 600;
}

textarea {
  box-sizing: border-box;
  border: 1px solid #999;
  width: 716rpx;
  height: 200rpx;
  font-size: 30rpx;
  color: #999;
  padding:20rpx;
}
.submit {
  width: 360rpx;
  height: 88rpx;
  text-align: center;
  margin:36rpx 25%;
  background-color: #FF4A26;
  color: #fff;
}

.submit_class{
  width: 360rpx;
  height: 88rpx;
  margin: auto auto;
}

.view_submit{
  display: flex;
  width: 100%;
  height: 200rpx;
}